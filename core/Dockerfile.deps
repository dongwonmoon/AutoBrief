FROM python:3.11-slim

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
         libgl1-mesa-glx \
         libglib2.0-0 \
         poppler-utils \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY ./requirements.txt /app

RUN pip install --no-cache-dir -r ./requirements.txt



